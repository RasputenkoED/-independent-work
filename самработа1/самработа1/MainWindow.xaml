<Window x:Class="самработа1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:самработа1"
        mc:Ignorable="d"
        Title="Самостоятельная работа 1" Height="300" Width="800" Name="MyWindow">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="10">
            <Slider Maximum="{Binding Width, ElementName=MyWindow}" Margin="0,0,-0.4,0" x:Name="SlideName" RenderTransformOrigin="0.501,-3.727" Height="15"/>
        </StackPanel>
        <Button Content="{Binding Value, ElementName=SlideName}" HorizontalAlignment="Left" Margin="50,53,0,0" VerticalAlignment="Top" Width="129" Height="41"/>
    </Grid>
</Window>
