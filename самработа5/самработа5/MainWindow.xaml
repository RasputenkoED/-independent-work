<Window x:Class="самработа5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:самработа5"
        mc:Ignorable="d"
        Title="Самостоятельная работа 5" Height="450" Width="800" Name="MyWindow">
    <Grid>
        <Slider Maximum="{Binding Width, ElementName=MyWindow}" Margin="0,0,-0.4,0" x:Name="SlideName" RenderTransformOrigin="0.501,-3.727" Height="15"/>
        <Button Content="{Binding Value, ElementName=SlideName, StringFormat='Slider value: {0}'}" HorizontalAlignment="Left" Margin="50,53,0,0" VerticalAlignment="Top" Width="233" Height="41"/>
        <Button Content="{Binding Value, ElementName=SlideName, StringFormat='Slider value: {1}'}" HorizontalAlignment="Left" Margin="50,117,0,0" VerticalAlignment="Top" Width="233" Height="41" Background="#FFFAFAFA"/>
    </Grid>
</Window>
